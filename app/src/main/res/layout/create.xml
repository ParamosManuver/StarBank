<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill"
        android:textSize="18sp"
        android:paddingBottom="15dp"/>

    <EditText
        android:inputType="text"
        android:id="@+id/create_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Firstname"/>

    <EditText
        android:inputType="text"
        android:id="@+id/create_secondname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Secondname"/>

    <EditText
        android:inputType="text"
        android:id="@+id/create_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"/>

    <EditText
        android:id="@+id/create_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"/>


    <EditText
        android:id="@+id/create_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"/>

    <EditText
        android:inputType="text"
        android:id="@+id/create_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gender"/>

    <EditText
        android:inputType="date"
        android:id="@+id/create_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date_of_Birth"/>

    <EditText
        android:id="@+id/create_residence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Residence"
        android:inputType="text"/>
<Button
    android:id="@+id/create_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SAVE"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>